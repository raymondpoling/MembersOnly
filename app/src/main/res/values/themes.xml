<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MembersOnly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ListNameStyle">
        <item name="fontFamily">@font/librebaskerville_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ListDetailStyle">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DetailNameStyle" parent="ListNameStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="DetailDetailStyle" parent="ListDetailStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LoginStyle">
        <item name="fontFamily">@font/librebaskerville_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">64dp</item>
    </style>
</resources>