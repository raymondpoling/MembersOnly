<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.listdisplay.view.MemberListActivity">

    <ListView
        android:id="@+id/member_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/add_member_button"
        tools:listitem="@layout/member_list_item" />

    <ImageView
        android:id="@+id/admin_imageview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_admin_tools"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/add_member_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_new_member"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>